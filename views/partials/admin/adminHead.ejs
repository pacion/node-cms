<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CMS</title>
    <link rel="stylesheet" href="/css/style2.css">
    <script src="/js/admin/useful.js"></script>
    <script src="TINYMCE API"
        referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: '.mytextarea',
            plugins: [
                "advlist autolink lists link image charmap print preview hr anchor pagebreak",
                "searchreplace wordcount visualblocks visualchars code fullscreen",
                "insertdatetime media nonbreaking save table contextmenu directionality",
                "emoticons template paste textcolor colorpicker textpattern"
            ],
            toolbar1: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image",
            toolbar2: "print preview code media | forecolor backcolor emoticons",
            image_advtab: true,
            relative_urls: false,
            images_upload_url: '/upload/tiny',
            file_picker_types: 'file image media',
            automatic_uploads: true,
            color_map: [

            ],
            formats: {
                // Changes the default format for h1 to have a class of heading
                h4: { block: 'h4', classes: 'heading' },
                alignleft : {'selector' : 'td,th,div,ul,ol,li,table,img', attributes: {"align":  'left'}},
                aligncenter : {'selector' : 'td,th,div,ul,ol,li,table,img', attributes: {"align":  'center'}},
                alignright : {'selector' : 'td,th,div,ul,ol,li,table,img', attributes: {"align":  'right'}},
                alignfull : {'selector' : 'td,th,div,ul,ol,li,table,img', attributes: {"align":  'justify'}},

                alignleft : {'selector' : 'p,h1,h2,h3,h4,h5,h6', styles: {"text-align":  'left'}},
                aligncenter : {'selector' : 'p,h1,h2,h3,h4,h5,h6', styles: {"text-align":  'center'}},
                alignright : {'selector' : 'p,h1,h2,h3,h4,h5,h6', styles: {"text-align":  'right'}},
                alignfull : {'selector' : 'p,h1,h2,h3,h4,h5,h6', styles: {"text-align":  'justify'}}
            },
            style_formats: [
                {
                    title: 'Headings', items: [
                        { title: 'Heading 4', format: 'h4' },
                        { title: 'Heading 5', format: 'h5' },
                        { title: 'Heading 6', format: 'h6' }
                    ]
                },
                {
                    title: 'Inline', items: [
                        { title: 'Bold', format: 'bold' },
                        { title: 'Italic', format: 'italic' },
                        { title: 'Underline', format: 'underline' },
                        { title: 'Strikethrough', format: 'strikethrough' },
                        { title: 'Superscript', format: 'superscript' },
                        { title: 'Subscript', format: 'subscript' },
                        { title: 'Code', format: 'code' }
                    ]
                },
                {
                    title: 'Blocks', items: [
                        { title: 'Paragraph', format: 'p' },
                        { title: 'Blockquote', format: 'blockquote' },
                        { title: 'Div', format: 'div' },
                        { title: 'Pre', format: 'pre' }
                    ]
                },
                {
                    title: 'Align', items: [
                        { title: 'Left', format: 'alignleft' },
                        { title: 'Center', format: 'aligncenter' },
                        { title: 'Right', format: 'alignright' },
                        { title: 'Justify', format: 'alignjustify' }
                    ]
                }
            ],
            fontsize_formats: '12pt',
            custom_colors: false,
            language: 'pl'
        });
    </script>
</head>